@model OfficeEditModel

<h1 class="text-center">Create New Office</h1>
<hr />
<form class="mx-auto col-md-6" asp-controller="Offices" asp-action="Edit" method="post">
    <input class="officeId" name="officeId" id="officeId" value="@Model.Id" hidden />
    <hr class="hr-style" />
    <div class="form-group">
        <div class="text-center">
            <label asp-for="Country"></label>
        </div>
        <input asp-for="Country" type="text" class="form-control" placeholder="Country..." value="@Model.Country" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>
    <div class="form-group">
        <div class="text-center">
            <label asp-for="City"></label>
        </div>
        <input asp-for="City" type="text" class="form-control" placeholder="City..." value="@Model.City" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-6">
            <label asp-for="Street"></label>
            <input type="text" asp-for="Street" class="form-control" placeholder="Street..." value="@Model.Street">
            <span asp-validation-for="Street" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <label asp-for="StreetNumber"></label>
            <input type="number" asp-for="StreetNumber" class="form-control" placeholder="Street Number..." value="@Model.StreetNumber">
            <span asp-validation-for="StreetNumber" class="text-danger"></span>
        </div>
    </div>
    <hr class="hr-style" />
    <div class="col-12 text-center">
        <button type="submit" class="btn btn-dark">Edit Office</button>
    </div>
</form>